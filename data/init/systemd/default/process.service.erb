[Unit]
StopWhenUnneeded=true
Requires=<%= name %>-<%= process_name %>.service
After=<%= name %>-<%= process_name %>.service

[Service]
Environment=PORT=PORT_NUM
ExecStart=/bin/sh -c '/usr/bin/<%= name %> run <%= process_name %> >> /var/log/<%= name %>/<%= process_name %>-PROCESS_NUM.log 2>&1'
Restart=always

[Install]
WantedBy=<%= name %>-<%= process_name %>.service
